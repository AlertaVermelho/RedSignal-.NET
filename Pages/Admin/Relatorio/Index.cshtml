@page
@model RedSignal.Pages.Admin.Relatorio.IndexModel
@{
    ViewData["Title"] = "Relatório";
}

<h1>Relatório de Locais Monitorados</h1>

<p>Este é um exemplo de relatório estático. Você pode listar aqui totais por usuário, últimos acessos ou exportações.</p>

<table class="table">
    <thead>
        <tr>
            <th>ID do Local</th>
            <th>UserId</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Locais)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserId</td>
                <td>@item.NomeLocal</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Admin/MonitoredLocationsManager/Index">← Voltar</a>
