@page "{id}"
@model RedSignal.Pages.Admin.MonitoredLocationsManager.DeleteModel
@{
    ViewData["Title"] = "Deletar Local Monitorado";
}

<h1>Deletar Local Monitorado</h1>

@if (Model.Local == null)
{
    <p>Local não encontrado.</p>
}
else
{
    <h4>Você tem certeza que deseja excluir este local?</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Local.NomeLocal</dd>

        <dt class="col-sm-2">Latitude</dt>
        <dd class="col-sm-10">@Model.Local.Latitude</dd>

        <dt class="col-sm-2">Longitude</dt>
        <dd class="col-sm-10">@Model.Local.Longitude</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Local.Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
}
