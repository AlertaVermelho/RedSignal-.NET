@page "{id:long}"
@model RedSignal.Pages.Admin.MonitoredLocationsManager.DetailsModel
@{
    ViewData["Title"] = "Detalhes do Local Monitorado";
}

<h1>Detalhes do Local Monitorado</h1>

@if (Model.Local == null)
{
    <p><strong>Local não encontrado.</strong></p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.Id)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.Id)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.UserId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.UserId)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.NomeLocal)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.NomeLocal)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.Latitude)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.Latitude)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.Longitude)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.Longitude)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.RaioNotificacaoKm)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.RaioNotificacaoKm)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.DataCriacao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.DataCriacao)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Local.DataAtualizacao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Local.DataAtualizacao)</dd>
    </dl>

    <div>
        <a asp-page="Edit" asp-route-id="@Model.Local.Id">Editar</a> |
        <a asp-page="Index">← Voltar à lista</a>
    </div>
}
