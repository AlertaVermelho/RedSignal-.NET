@page
@model RedSignal.Pages.Admin.MonitoredLocationsManager.IndexModel
@{
    ViewData["Title"] = "Locais Monitorados";
}

<h1>Locais Monitorados</h1>

<form method="get">
    <label for="UserIdFilter">Filtrar por ID do Usuário:</label>
    <input type="number" name="UserIdFilter" value="@Model.UserIdFilter" />
    <button type="submit">Filtrar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserId</th>
            <th>Nome do Local</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Raio (km)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Locais)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserId</td>
                <td>@item.NomeLocal</td>
                <td>@item.Latitude</td>
                <td>@item.Longitude</td>
                <td>@item.RaioNotificacaoKm</td>
                <td>
                    <a asp-page="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-page="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-page="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
